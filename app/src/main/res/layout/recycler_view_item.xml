<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/chord"
        android:layout_width="@dimen/rv_width"
        android:layout_height="@dimen/rv_heigth"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        tools:ignore="MissingConstraints"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/chord_name"
        android:layout_width="@dimen/rv_width"
        android:layout_height="wrap_content"
        android:background="@color/bgr"
        android:textAlignment="center"
        android:textSize="@dimen/rv_text_size"
        app:layout_constraintTop_toBottomOf="@+id/chord"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>